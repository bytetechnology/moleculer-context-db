{
  "name": "moleculer-context-db",
  "version": "1.2.2",
  "description": "A database tool for providing the database session as part of the context",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc -p src/tsconfig.json",
    "lint": "eslint \"{src,{tests,mocks}}/**/*.{js,ts}\"",
    "format": "prettier --write \"{src,{tests,mocks}}/**/*.{js,ts}\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "test": "jest --coverage --runInBand --no-cache",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bytetechnology/moleculer-context-db.git"
  },
  "keywords": [
    "moleculer",
    "microservices",
    "database",
    "session",
    "transaction"
  ],
  "author": "Byte Technology",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bytetechnology/moleculer-context-db/issues"
  },
  "homepage": "https://github.com/bytetechnology/moleculer-context-db#readme",
  "dependencies": {
    "@mikro-orm/core": "^4.3.4",
    "moleculer": "^0.14.12"
  },
  "devDependencies": {
    "@mikro-orm/mongodb": "^4.3.4",
    "@mikro-orm/sqlite": "^4.3.4",
    "@types/jest": "^26.0.20",
    "@types/mongodb": "^3.6.3",
    "@types/node": "^14.14.20",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "moleculer-decorators": "^1.3.0",
    "mongodb-memory-server": "^6.9.2",
    "prettier": "^2.2.1",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "uuid": "^8.3.2"
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "4.4.1"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "rootDir": ".",
    "coverageDirectory": "tests/coverage",
    "testTimeout": 30000,
    "roots": [
      "tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*\\.(test|spec).(ts|js)$",
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.json"
      }
    },
    "setupFiles": [
      "./tests/setup.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
