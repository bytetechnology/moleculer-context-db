{
  "name": "moleculer-context-db",
  "version": "1.1.8",
  "description": "A database tool for providing the database session as part of the context",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc -p src/tsconfig.json",
    "lint": "eslint \"{src,{tests,mocks}}/**/*.{js,ts}\"",
    "format": "prettier --write \"{src,{tests,mocks}}/**/*.{js,ts}\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "test": "jest --coverage --runInBand",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bytetechnology/moleculer-context-db.git"
  },
  "keywords": [
    "moleculer",
    "microservices",
    "database",
    "session",
    "transaction"
  ],
  "author": "David Sornberger <davids@bytetechnology.co>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bytetechnology/moleculer-context-db/issues"
  },
  "homepage": "https://github.com/bytetechnology/moleculer-context-db#readme",
  "dependencies": {
    "@mikro-orm/core": "4.0.7",
    "moleculer": "0.14.11",
    "uuid": "8.3.0"
  },
  "devDependencies": {
    "@mikro-orm/mongodb": "4.0.7",
    "@mikro-orm/sqlite": "4.0.7",
    "@types/jest": "26.0.14",
    "@types/mongodb": "3.5.27",
    "@types/node": "14.11.2",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.3.0",
    "@typescript-eslint/parser": "4.3.0",
    "eslint": "7.10.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.1.4",
    "jest": "26.4.2",
    "moleculer-decorators": "1.3.0",
    "mongodb-memory-server": "6.7.4",
    "prettier": "2.1.2",
    "reflect-metadata": "0.1.13",
    "ts-jest": "26.4.1",
    "ts-node": "9.0.0",
    "typescript": "4.0.3"
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "4.2.5"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "rootDir": ".",
    "coverageDirectory": "tests/coverage",
    "testTimeout": 30000,
    "roots": [
      "tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*\\.(test|spec).(ts|js)$",
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.json"
      }
    },
    "setupFiles": [
      "./tests/setup.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
